{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Add a service template",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "name",
        "alias"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "alias": {
            "type": "string"
        },
        "comment": {
            "type": [
                "null",
                "string"
            ]
        },
        "service_template_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "check_command_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "check_command_args": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "check_timeperiod_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "max_check_attempts": {
            "type": [
                "null",
                "integer"
            ]
        },
        "normal_check_interval": {
            "type": [
                "null",
                "integer"
            ]
        },
        "retry_check_interval": {
            "type": [
                "null",
                "integer"
            ]
        },
        "active_check_enabled": {
            "type": "integer",
            "enum": [
                0,
                1,
                2
            ]
        },
        "passive_check_enabled": {
            "type": "integer",
            "enum": [
                0,
                1,
                2
            ]
        },
        "volatility_enabled": {
            "type": "integer",
            "enum": [
                0,
                1,
                2
            ]
        },
        "notification_enabled": {
            "type": "integer",
            "enum": [
                0,
                1,
                2
            ]
        },
        "is_contact_additive_inheritance": {
            "type": "boolean"
        },
        "is_contact_group_additive_inheritance": {
            "type": "boolean"
        },
        "notification_interval": {
            "type": [
                "null",
                "integer"
            ]
        },
        "notification_timeperiod_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "notification_type": {
            "type": [
                "null",
                "integer"
            ]
        },
        "first_notification_delay": {
            "type": [
                "null",
                "integer"
            ]
        },
        "recovery_notification_delay": {
            "type": [
                "null",
                "integer"
            ]
        },
        "acknowledgement_timeout": {
            "type": [
                "null",
                "integer"
            ]
        },
        "freshness_checked": {
            "type": "integer",
            "enum": [
                0,
                1,
                2
            ]
        },
        "freshness_threshold": {
            "type": [
                "null",
                "integer"
            ]
        },
        "flap_detection_enabled": {
            "type": "integer",
            "enum": [
                0,
                1,
                2
            ]
        },
        "low_flap_threshold": {
            "type": [
                "null",
                "integer"
            ]
        },
        "high_flap_threshold": {
            "type": [
                "null",
                "integer"
            ]
        },
        "event_handler_enabled": {
            "type": "integer",
            "enum": [
                0,
                1,
                2
            ]
        },
        "event_handler_command_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "event_handler_command_args": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "graph_template_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "note": {
            "type": [
                "null",
                "string"
            ]
        },
        "note_url": {
            "type": [
                "null",
                "string"
            ]
        },
        "action_url": {
            "type": [
                "null",
                "string"
            ]
        },
        "icon_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "icon_alternative": {
            "type": [
                "null",
                "string"
            ]
        },
        "severity_id": {
             "type": [
                "null",
                "integer"
            ]
        },
        "is_activated": {
            "type": "boolean"
        },
        "host_templates": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "macros": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "value",
                    "is_password",
                    "description"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": [
                            "null",
                            "string"
                        ]
                    },
                    "is_password": {
                        "type": "boolean"
                    },
                    "description": {
                        "type": [
                            "null",
                            "string"
                        ]
                    }
                }
            }
        }
    }
}

{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Partial update of a service template on an 'on premise' platform",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "host_templates": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "service_categories": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "macros": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "value",
                    "is_password",
                    "description"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": [
                            "null",
                            "string"
                        ]
                    },
                    "is_password": {
                        "type": "boolean"
                    },
                    "description": {
                        "type": [
                            "null",
                            "string"
                        ]
                    }
                }
            }
        }
    }
}

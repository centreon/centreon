{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "CMA configuration parameters schema",
    "type": "object",
    "required": [
        "configuration"
    ],
    "additionalProperties": true,
    "properties": {
        "configuration": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "agent_initiated",
                "poller_initiated",
                "otel_public_certificate",
                "otel_ca_certificate",
                "otel_private_key",
                "hosts",
                "tokens"
            ],
            "properties": {
                "agent_initiated": {
                    "type": "boolean"
                },
                "poller_initiated": {
                    "type": "boolean"
                },
                "otel_public_certificate": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "otel_ca_certificate": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "otel_private_key": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "tokens": {
                    "type": "array",
                    "items": {
                        "required": [
                            "name",
                            "creator_id"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "creator_id": {
                                "type": "integer"
                            }
                        }
                    }
                },
                "hosts": {
                    "type": "array",
                    "items": {
                        "required": [
                            "address",
                            "id",
                            "port",
                            "poller_ca_certificate",
                            "poller_ca_name",
                            "token"
                        ],
                        "properties": {
                            "id": {
                                "type": ["integer"]
                            },
                            "address": {
                                "type": "string"
                            },
                            "port": {
                                "type": "integer"
                            },
                            "poller_ca_certificate": {
                                "type": [
                                    "null",
                                    "string"
                                ]
                            },
                            "poller_ca_name": {
                                "type": [
                                    "null",
                                    "string"
                                ]
                            },
                            "token": {
                                "type": [
                                    "null",
                                    "object"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "creator_id": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "CMA configuration parameters schema",
    "type": "object",
    "required": [
        "configuration"
    ],
    "additionalProperties": true,
    "properties": {
        "configuration": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "is_reverse",
                "otel_public_certificate",
                "otel_ca_certificate",
                "otel_private_key",
                "hosts"
            ],
            "properties": {
                "is_reverse": {
                    "type": "boolean"
                },
                "otel_public_certificate": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "otel_ca_certificate": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "otel_private_key": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "hosts": {
                    "type": "array",
                    "items": {
                        "required": [
                            "address",
                            "name",
                            "port",
                            "poller_ca_certificate",
                            "poller_ca_name"
                        ],
                        "properties": {
                            "name": {
                                "type": ["string"]
                            },
                            "address": {
                                "type": "string"
                            },
                            "port": {
                                "type": "integer"
                            },
                            "poller_ca_certificate": {
                                "type": [
                                    "null",
                                    "string"
                                ]
                            },
                            "poller_ca_name": {
                                "type": [
                                    "null",
                                    "string"
                                ]
                            }
                        }
                    }
                }
            }
        }
    }
}

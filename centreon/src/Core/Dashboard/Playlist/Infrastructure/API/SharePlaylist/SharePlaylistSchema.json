{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Add a new dashboard",
    "type": "object",
    "required": [
        "contacts",
        "contactgroups"
    ],
    "additionalProperties": false,
    "properties": {
        "contacts": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "role"
                ],
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "viewer",
                            "editor"
                        ]
                    }
                }
            }
        },
        "contact_groups": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "role"
                ],
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "viewer",
                            "editor"
                        ]
                    }
                }
            }
        }
    }
}

{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Add a new dashboard",
    "type": "object",
    "required": [
        "name",
        "description",
        "dashboards",
        "rotation_time",
        "is_public"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": [
                "string",
                "null"
            ]
        },
        "dashboards": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "order": {
                        "type": "number"
                    }
                }
            }
        },
        "rotation_time": {
            "type": "number"
        },
        "is_public": {
            "type": "boolean"
        }
    }
}

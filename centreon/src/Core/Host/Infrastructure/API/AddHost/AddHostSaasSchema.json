{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Add host",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "name",
        "address",
        "monitoring_server_id"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "alias": {
            "type": [
                "null",
                "string"
            ]
        },
        "snmp_version": {
            "type": [
                "null",
                "string"
            ],
            "enum": [
                null,
                "1",
                "2c",
                "3"
            ]
        },
        "snmp_community": {
            "type": [
                "null",
                "string"
            ]
        },
        "icon_id": {
            "type": [
                "integer",
                "null"
            ]
        },
        "max_check_attempts": {
            "type": [
                "integer",
                "null"
            ]
        },
        "normal_check_interval": {
            "type": [
                "integer",
                "null"
            ]
        },
        "retry_check_interval": {
            "type": [
                "integer",
                "null"
            ]
        },
        "timezone_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "severity_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "check_timeperiod_id": {
            "type": [
                "null",
                "integer"
            ]
        },
        "note_url": {
            "type": [
                "null",
                "string"
            ]
        },
        "note": {
            "type": [
                "null",
                "string"
            ]
        },
        "action_url": {
            "type": [
                "null",
                "string"
            ]
        },
        "is_activated": {
            "type": [
                "null",
                "boolean"
            ]
        },
        "categories": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "groups": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "templates": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "macros": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "value",
                    "is_password",
                    "description"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": [
                            "null",
                            "string"
                        ]
                    },
                    "is_password": {
                        "type": "boolean"
                    },
                    "description": {
                        "type": [
                            "null",
                            "string"
                        ]
                    }
                }
            }
        },
        "address": {
            "type": "string"
        },
        "monitoring_server_id": {
            "type": "integer"
        },
        "geo_coords": {
            "type": [
                "string",
                "null"
            ]
        }
    }
}



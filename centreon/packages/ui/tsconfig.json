{
  "extends": "../js-config/tsconfig/index.json",
  "compilerOptions": {
    "baseUrl": "./",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "pretty": true,
    "emitDeclarationOnly": true,
    "types": [],
    "esModuleInterop": true,
    "moduleResolution": "NodeNext"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "../../node_modules"
  ],
}
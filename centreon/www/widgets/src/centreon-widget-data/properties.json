{
  "title": "Generic data (example)",
  "description": "This is the description of the data widget",
  "options": {
    "threshold": {
      "type": "threshold",
      "defaultValue": {
        "enabled": true,
        "customCritical": null,
        "criticalType": "default",
        "customWarning": null,
        "warningType": "default"
      },
      "label": "threshold"
    },
    "sortBy": {
      "type": "radio",
      "label": "Sort by",
      "options": [
        {
          "id": "name",
          "name": "Name"
        }
      ],
      "defaultValue": "name",
      "hiddenCondition": {
        "when": "options.threshold.enabled",
        "matches": false
      }
    }
  },
  "data": {
    "resources": {
      "type": "resources",
      "defaultValue": []
    },
    "metrics": {
      "type": "metrics",
      "defaultValue": []
    }
  },
  "generalProperties": {
    "groups": [
      {
        "id": "group",
        "name": "Group name"
      }
    ],
    "elements": {
      "select": {
        "group": "group",
        "type": "select",
        "label": "Select field",
        "defaultValue": "option1",
        "options": [
          {
            "id": "option1",
            "name": "Option 1"
          },
          {
            "id": "option2",
            "name": "Option 2"
          }
        ]
      },
      "radio": {
        "type": "radio",
        "label": "Radio",
        "options": [
          {
            "id": "name",
            "name": "Name"
          }
        ],
        "defaultValue": "name"
      }
    }
  },
  "moduleName": "centreon-widget-data"
}
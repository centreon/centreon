{
  "title": "Status grid",
  "description": "Displays a status overview for selected resources.",
  "options": {
    "resourceType": {
      "type": "radio",
      "label": "Display with this resource type",
      "options": [
        {
          "id": "host",
          "name": "Host"
        },
        {
          "id": "service",
          "name": "Service" 
        }
      ],
      "defaultValue": "host"
    },
    "statuses": {
      "type": "checkbox",
      "label": "Display resources with this status",
      "secondaryLabel": ["For a host, the status displayed in the tile is the worst among its own status and the statuses of its services.", "For a service, the service status is displayed."],
      "options": {
        "when": "resourceType",
        "is": "host",
        "then": [
          {
            "id": "up",
            "name": "Up"
          },
          {
            "id": "down",
            "name": "Down"
          },
          {
            "id": "unreachable",
            "name": "Unreachable"
          },
          {
            "id": "pending",
            "name": "Pending"
          }
        ],
        "otherwise": [
          {
            "id": "ok",
            "name": "Ok"
          },
          {
            "id": "warning",
            "name": "Warning"
          },
          {
            "id": "critical",
            "name": "Critical"
          },
          {
            "id": "unknown",
            "name": "Unknown"
          },
          {
            "id": "pending",
            "name": "Pending"
          }
        ]
      },
      "defaultValue": {
        "when": "resourceType",
        "is": "host",
        "then": ["up", "down"],
        "otherwise": ["ok", "warning", "critical"]
      }
    },
    "states": {
      "type": "checkbox",
      "label": "Display resources with this state",
      "options": [
        {
          "id": "acknowledged",
          "name": "Acknowledged"
        },
        {
          "id": "in-downtime",
          "name": "In downtime"
        }
      ],
      "defaultValue": []
    },
    "sortBy": {
      "type": "radio",
      "label": "Sort by",
      "options": [
        {
          "id": "status",
          "name": "Status"
        },
        {
          "id": "name",
          "name": "Name" 
        }
      ],
      "defaultValue": "status"
    },
    "tiles": {
      "type": "tiles",
      "defaultValue": 100
    },
    "refreshInterval": {
      "type": "refresh-interval",
      "defaultValue": "default",
      "label": "Interval"
    }
  },
  "data": {
    "resources": {
      "type": "resources",
      "defaultValue": []
    }
  },
  "moduleName": "centreon-widget-statusgrid"
}
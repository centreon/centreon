      "defaultValue": {
        "start": null,
        "end": null,
        "timePeriodType": 1
      }
    },
    "threshold": {
      "type": "threshold",
      "defaultValue": {
        "enabled": true,
        "customCritical": null,
        "criticalType": "default",
        "customWarning": null,
        "warningType": "default"
      },
      "label": "threshold"
    },
    "refreshInterval": {
      "type": "refresh-interval",
      "defaultValue": "default",
      "label": "Interval"
    }
  },
  "data": {
    "resources": {
      "type": "resources",
      "defaultValue": [],
      "required": true,
      "excludedResourceTypes": [
        "meta-service"
      ]
    },
    "metrics": {
      "type": "metrics",
      "defaultValue": []
    }
  },
  "categories": {
    "Display settings": {
      "groups": [
        {
          "id": "graphStyles",
          "name": "Graph style"
        },
        {
          "id": "axis",
          "name": "Axis"
        },
        {
          "id": "legend",
          "name": "Legend"
        },
        {
          "id": "tooltip",
          "name": "Tooltip"
        }
      ],
      "elements": {
        "displayType": {
          "type": "displayType",
          "defaultValue": "line",
          "options": [
            {
              "id": "line",
              "label": "Line",

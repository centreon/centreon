    "ext-posix": "*",
    "ext-session": "*",
    "ext-simplexml": "*",
    "ext-xmlwriter": "*",
    "ext-zip": "*",
    "amphp/http-client": "4.6.*",
    "beberlei/assert": "3.3.*",
    "curl/curl": "2.5.*",
    "doctrine/annotations": "1.14.*",
    "doctrine/dbal": "4.2.*",
    "doctrine/doctrine-bundle": "2.15.*",
    "dragonmantank/cron-expression": "3.1.*",
    "enshrined/svg-sanitize": "0.15.*",
    "firebase/php-jwt": "6.11.*",
    "friendsofsymfony/rest-bundle": "3.8.*",
    "jms/serializer-bundle": "5.5.*",
    "justinrainbow/json-schema": "5.3.*",
    "monolog/monolog": "3.7.*",
    "nelmio/cors-bundle": "2.5.*",
    "onelogin/php-saml": "4.2.*",
    "openpsa/quickform": "3.3.*",
    "pear/pear-core-minimal": "1.10.*",
    "phpdocumentor/reflection-docblock": "5.4.*",
    "pimple/pimple": "3.5.*",
    "psr/container": "1.1.*",
    "smarty-gettext/smarty-gettext": "1.7.*",
    "smarty/smarty": "4.5.*",
    "symfony/config": "6.4.*",
    "symfony/console": "6.4.*",
    "symfony/dependency-injection": "6.4.*",
    "symfony/dotenv": "6.4.*",
    "symfony/error-handler": "6.4.*",
    "symfony/event-dispatcher": "6.4.*",
    "symfony/event-dispatcher-contracts": "3.4.*",
    "symfony/expression-language": "6.4.*",
    "symfony/filesystem": "6.4.*",
    "symfony/finder": "6.4.*",
    "symfony/flex": "2.4.*",
    "symfony/framework-bundle": "6.4.*",
    "symfony/http-client": "6.4.*",
    "symfony/http-foundation": "6.4.*",
    "symfony/http-kernel": "6.4.*",
    "symfony/lock": "6.4.*",
    "symfony/maker-bundle": "1.61.*",
    "symfony/mime": "6.4.*",
    "symfony/monolog-bundle": "3.10.*",
    "symfony/options-resolver": "6.4.*",
    "symfony/property-access": "6.4.*",
    "symfony/property-info": "6.4.*",
    "symfony/routing": "6.4.*",
    "symfony/runtime": "6.4.*",
    "symfony/security-bundle": "6.4.*",
    "symfony/security-core": "6.4.*",
    "symfony/serializer": "6.4.*",
    "symfony/string": "6.4.*",
    "symfony/translation": "6.4.*",
    "symfony/uid": "6.4.*",
    "symfony/validator": "6.4.*",
    "symfony/yaml": "6.4.*"
  },
  "require-dev": {
    "behat/behat": "3.14.*",
    "behat/mink-selenium2-driver": "1.6.*",
    "centreon/centreon-test-lib": "dev-master",
    "dama/doctrine-test-bundle": "8.2.*",
    "deptrac/deptrac": "3.0.*",
    "friends-of-behat/mink": "1.11.*",
    "friends-of-behat/mink-extension": "2.7.*",
    "mockery/mockery": "1.6.*",
    "pestphp/pest": "1.23.*",
    "php-vfs/php-vfs": "1.4.*",
    "phpunit/phpunit": "9.6.*",
    "robertfausk/mink-panther-driver": "1.1.*",
    "squizlabs/php_codesniffer": "3.10.*",
    "symfony/phpunit-bridge": "6.4.*",
    "symfony/stopwatch": "6.4.*",
    "symfony/twig-bundle": "6.4.*",
    "symfony/var-dumper": "6.4.*",
    "symfony/web-profiler-bundle": "6.4.*",
    "twig/twig": "3.14.*",
    "webmozart/assert": "1.11.*",
    "zircote/swagger-php": "4.10.*"
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "autoload": {
    "psr-4": {
      "": "src/",
      "ConfigGenerateRemote\\": "www/class/config-generate-remote/",
      "Tests\\": "tests/php/",
      "Centreon\\Test\\Api\\": "tests/api/"
    },
    "classmap": [
      "www/class/",
      "lib/Centreon"
    ],
    "files": [
      "GPL_LIB/smarty-plugins/compiler.displaysvg.php",
      "GPL_LIB/smarty-plugins/compiler.pagination.php",
      "GPL_LIB/smarty-plugins/function.eval.php",
      "GPL_LIB/smarty-plugins/SmartyBC.php",
      "www/api/exceptions.php",
      "www/api/class/webService.class.php",
      "www/lib/HTML/QuickForm/HTML_QuickFormCustom.php",
      "www/lib/HTML/QuickForm/HTML_QuickForm_checkbox_Custom.php",
      "www/lib/HTML/QuickForm/HTML_QuickForm_radio_Custom.php",
      "www/lib/HTML/QuickForm/select2.php",
      "www/lib/HTML/QuickForm/advmultiselect.php",
      "www/lib/HTML/QuickForm/tags.php",
      "www/lib/HTML/QuickForm/customcheckbox.php",
      "www/lib/HTML/QuickForm/selectoptgroup.php",
      "www/class/centreon-clapi/centreonACL.class.php"
    ]
  },
  "config": {
    "secure-http": false,
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "pestphp/pest-plugin": false,
      "symfony/flex": false,
      "symfony/runtime": true
    }
  },
  "scripts": {
    "require:check": "../tools/vendor/bin/composer-require-checker check composer.json",
    "symfony:check:ci": "php bin/console lint:yaml config src --parse-tags && php bin/console lint:container",
    "phpcsfixer:legacy:src": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.src.php --verbose --dry-run --diff",
    "phpcsfixer:legacy:src:fix": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.src.php --verbose --diff",
    "phpcsfixer:core": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.core.php --verbose --dry-run --diff",
    "phpcsfixer:core:fix": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.core.php --verbose --diff",
    "phpcsfixer:new": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.new.php --verbose --dry-run --diff",
    "phpcsfixer:new:fix": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.new.php --verbose --diff",
    "phpstan:legacy:src": "../tools/vendor/bin/phpstan analyse -c phpstan.legacy.src.neon --memory-limit=1G",
    "phpstan:core": "../tools/vendor/bin/phpstan analyse -c phpstan.core.neon --memory-limit=1G",
    "phpstan:test": "../tools/vendor/bin/phpstan analyse -c phpstan.test.neon --memory-limit=1G",
    "phpstan:new": "../tools/vendor/bin/phpstan analyse -c phpstan.new.neon --memory-limit=1G",
    "php:check8.2": "../tools/vendor/bin/phpcs -p --standard=PHPCompatibility --extensions=php --runtime-set testVersion 8.2 . --ignore=*/vendor/*  --error-severity=1 --warning-severity=8",
    "rector:check": "../tools/vendor/bin/rector process --dry-run --debug",
    "rector:fix": "../tools/vendor/bin/rector process --debug",
    "test": "pest --do-not-cache-result",
    "test:ci": "@test --log-junit ./build/phpunit.xml --coverage-clover ./build/coverage-be.xml --no-interaction"
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "6.4.*"
    }
  }
}

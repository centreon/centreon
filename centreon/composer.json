{
  "name": "centreon/centreon",
  "description": "Centreon - IT and Application monitoring software",
  "version": "25.07",
  "type": "project",
  "license": "GPL-2.0-only",
  "require": {
    "ext-ctype": "*",
    "ext-curl": "*",
    "ext-gettext": "*",
    "ext-iconv": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-ldap": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-phar": "*",
    "ext-posix": "*",
    "ext-simplexml": "*",
    "ext-zip": "*",
    "amphp/http-client": "^4.6",
    "api-platform/core": "^4.1",
    "api-platform/symfony": "*",
    "beberlei/assert": "^3.3",
    "curl/curl": "^2.3",
    "doctrine/annotations": "^1.0",
    "doctrine/dbal": "^4.2",
    "doctrine/doctrine-bundle": "^2.15",
    "dragonmantank/cron-expression": "3.1.0",
    "enshrined/svg-sanitize": "^0.15",
    "firebase/php-jwt": "^6.11",
    "friendsofsymfony/rest-bundle": "^3.0",
    "jms/serializer-bundle": "^5.4",
    "justinrainbow/json-schema": "^5.2",
    "monolog/monolog": "3.7.*",
    "nelmio/cors-bundle": "2.5.*",
    "onelogin/php-saml": "4.2.*",
    "openpsa/quickform": "3.3.*",
    "pear/pear-core-minimal": "1.10.*",
    "phpdocumentor/reflection-docblock": "5.4.*",
    "pimple/pimple": "3.5.*",
    "psr/container": "1.1.*",
    "smarty-gettext/smarty-gettext": "1.7.*",
    "smarty/smarty": "4.5.*",
    "symfony/asset": "7.3.*",
    "symfony/config": "7.3.*",
    "symfony/console": "7.3.*",
    "symfony/dependency-injection": "7.3.*",
    "symfony/dotenv": "7.3.*",
    "symfony/error-handler": "7.3.*",
    "symfony/event-dispatcher": "7.3.*",
    "symfony/event-dispatcher-contracts": "3.4.*",
    "symfony/expression-language": "7.3.*",
    "symfony/filesystem": "7.3.*",
    "symfony/finder": "7.3.*",
    "symfony/flex": "2.4.*",
    "symfony/framework-bundle": "7.3.*",
    "symfony/http-client": "7.3.*",
    "symfony/http-foundation": "7.3.*",
    "symfony/http-kernel": "7.3.*",
    "symfony/lock": "7.3.*",
    "symfony/mime": "7.3.*",
    "symfony/monolog-bundle": "3.10.*",
    "symfony/property-info": "7.3.*",
    "symfony/routing": "7.3.*",
    "symfony/runtime": "7.3.*",
    "symfony/security-bundle": "7.3.*",
    "symfony/serializer": "7.3.*",
    "symfony/translation-contracts": "3.6.*",
    "symfony/twig-bundle": "7.3.*",
    "symfony/uid": "7.3.*",
    "symfony/validator": "7.3.*",
    "symfony/yaml": "7.3.*",
    "webmozart/assert": "1.11.*"
  },
  "require-dev": {
    "behat/mink-selenium2-driver": "1.6.*",
    "centreon/centreon-test-lib": "dev-remove_frameworkbundle_deprecations_anthony",
    "dama/doctrine-test-bundle": "^8.2",
    "dealerdirect/phpcodesniffer-composer-installer": "1.0.*",
    "deptrac/deptrac": "^3.0",
    "friends-of-behat/mink": "1.11.*",
    "friends-of-behat/mink-extension": "2.7.*",
    "friendsofphp/php-cs-fixer": "3.64.*",
    "mockery/mockery": "1.6.*",
    "php-vfs/php-vfs": "1.4.*",
    "phpcompatibility/php-compatibility": "9.3.*",
    "phpstan/phpstan": "1.12.*",
    "phpstan/phpstan-beberlei-assert": "1.1.*",
    "phpstan/phpstan-mockery": "1.1.*",
    "phpunit/phpunit": "^9.6",
    "rector/rector": "1.2.*",
    "robertfausk/mink-panther-driver": "1.1.*",
    "squizlabs/php_codesniffer": "3.10.*",
    "symfony/maker-bundle": "^1.63",
    "symfony/phpunit-bridge": "7.3.*",
    "symfony/stopwatch": "7.3.*",
    "symfony/var-dumper": "7.3.*",
    "symfony/web-profiler-bundle": "7.3.*",
    "zircote/swagger-php": "4.10.*"
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "autoload": {
    "psr-4": {
      "": "src/",
      "ConfigGenerateRemote\\": "www/class/config-generate-remote/",
      "Tests\\": "tests/php/",
      "Centreon\\Test\\Api\\": "tests/api/"
    },
    "classmap": [
      "www/class/",
      "lib/Centreon"
    ],
    "files": [
      "GPL_LIB/smarty-plugins/compiler.displaysvg.php",
      "GPL_LIB/smarty-plugins/compiler.pagination.php",
      "GPL_LIB/smarty-plugins/function.eval.php",
      "GPL_LIB/smarty-plugins/SmartyBC.php",
      "www/api/exceptions.php",
      "www/api/class/webService.class.php",
      "www/lib/HTML/QuickForm/HTML_QuickFormCustom.php",
      "www/lib/HTML/QuickForm/HTML_QuickForm_checkbox_Custom.php",
      "www/lib/HTML/QuickForm/HTML_QuickForm_radio_Custom.php",
      "www/lib/HTML/QuickForm/select2.php",
      "www/lib/HTML/QuickForm/advmultiselect.php",
      "www/lib/HTML/QuickForm/tags.php",
      "www/lib/HTML/QuickForm/customcheckbox.php",
      "www/lib/HTML/QuickForm/selectoptgroup.php",
      "www/class/centreon-clapi/centreonACL.class.php"
    ]
  },
  "config": {
    "secure-http": false,
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": false,
      "symfony/flex": false,
      "symfony/runtime": true
    }
  },
  "scripts": {
    "test": "pest --do-not-cache-result",
    "test:ci": "@test --log-junit ./build/phpunit.xml --coverage-clover ./build/coverage-be.xml --no-interaction",
    "phpcs:strict": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --dry-run --diff",
    "phpcs:unstrict": "php-cs-fixer fix --config=.php-cs-fixer.unstrict.php --verbose --dry-run --diff",
    "phpcs:strict:exec": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --diff",
    "phpcs:unstrict:exec": "php-cs-fixer fix --config=.php-cs-fixer.unstrict.php --verbose --diff",
    "phpcs:strict:ci": "@phpcs:strict",
    "phpcs:unstrict:ci": "@phpcs:unstrict",
    "phpstan": "phpstan analyse -c phpstan.neon --level=4 --memory-limit=1G --debug",
    "phpstan:core": "phpstan analyse -c phpstan.core.neon --level=8 --memory-limit=1G --debug",
    "phpstan:test": "phpstan analyse -c phpstan.test.neon --level=2 --memory-limit=1G --debug",
    "phpstan:ci": "@phpstan --no-progress",
    "phpstan:core:ci": "@phpstan:core --no-progress",
    "phpstan:test:ci": "@phpstan:test --no-progress",
    "php:check8.2": "phpcs -p --standard=PHPCompatibility --extensions=php --runtime-set testVersion 8.2 . --ignore=*/vendor/*  --error-severity=1 --warning-severity=8",
    "rector:check": "rector process --dry-run --debug",
    "rector:exec": "rector process --debug",
    "symfony:check:ci": "php bin/console lint:yaml config src --parse-tags && php bin/console lint:container"
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "7.3.*",
      "public-dir": "www"
    }
  }
}

{
  "name": "centreon/centreon-dsm",
  "version": "25.07",
  "type": "project",
  "license": "GPL-2.0-only",
  "require": {
    "php": "8.2",
    "ext-gettext": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "centreon/centreon": "@dev",
    "centreon/centreon-test-lib": "dev-master"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../centreon"
    }
  ],
  "config": {
    "secure-http": false,
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "symfony/flex": false,
      "pestphp/pest-plugin": true,
      "symfony/runtime": true
    }
  },
  "scripts": {
    "require:check": "../tools/vendor/bin/composer-require-checker check --config-file=composer-require-checker.json composer.json",
    "rector": "../tools/vendor/bin/rector process --dry-run",
    "rector:fix": "../tools/vendor/bin/rector process",
    "cs:legacy:www": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.www.php --verbose --dry-run --diff",
    "cs:legacy:www:fix": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.www.php --verbose --diff",
    "stan:legacy:www": "../tools/vendor/bin/phpstan analyse -c phpstan.legacy.www.neon --memory-limit=512M",
    "cs": [
      "@cs:legacy:www"
    ],
    "cs:fix": [
      "@cs:legacy:www:fix"
    ],
    "stan": [
      "@stan:legacy:www"
    ],
    "ci": [
      "@rector",
      "@cs",
      "@stan"
    ]
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "6.4.*"
    }
  }
}

{
  "name": "centreon/centreon-dsm",
  "version": "25.07",
  "type": "project",
  "license": "GPL-2.0-only",
  "require": {
    "php": "8.2",
    "ext-gettext": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "centreon/centreon": "@dev",
    "centreon/centreon-test-lib": "dev-master",
    "dealerdirect/phpcodesniffer-composer-installer": "1.0.*",
    "friendsofphp/php-cs-fixer": "3.64.*",
    "maglnet/composer-require-checker": "4.16.*",
    "phpcompatibility/php-compatibility": "9.3.*",
    "phpstan/phpstan": "1.12.*",
    "rector/rector": "1.2.*",
    "squizlabs/php_codesniffer": "3.10.*"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../centreon"
    }
  ],
  "config": {
    "secure-http": false,
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "symfony/flex": false,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true,
      "symfony/runtime": true
    }
  },
  "scripts": {
    "require:check": "../tools/vendor/bin/composer-require-checker check --config-file=composer-require-checker.json composer.json",
    "phpcsfixer:legacy": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.php --verbose --dry-run --diff",
    "phpcsfixer:legacy:fix": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.php --verbose --diff",
    "phpstan:legacy": "../tools/vendor/bin/phpstan analyse -c phpstan.legacy.neon --memory-limit=512M",
    "php:check8.2": "../tools/vendor/bin/phpcs -p --standard=PHPCompatibility --extensions=php --runtime-set testVersion 8.2 . --ignore=*/vendor/*  --error-severity=1 --warning-severity=8",
    "rector:check": "../tools/vendor/bin/rector --dry-run",
    "rector:fix": "../tools/vendor/bin/rector"
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "6.4.*"
    }
  }
}

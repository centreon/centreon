{
  "name": "centreon/centreon-open-tickets",
  "description": "Module dedicated to open case on various Ticket systems",
  "version": "25.07",
  "type": "project",
  "keywords": [
    "centreon",
    "centreon-open-tickets"
  ],
  "license": "GPL-2.0-only",
  "require": {
    "php": "8.2",
    "ext-curl": "*",
    "ext-ctype": "*",
    "ext-fileinfo": "*",
    "ext-filter": "*",
    "ext-gettext": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-session": "*"
  },
  "require-dev": {
    "beberlei/assert": "3.3.*",
    "centreon/centreon": "@dev",
    "centreon/centreon-test-lib": "dev-master",
    "pestphp/pest": "1.23.*",
    "symfony/console": "6.4.*"
  },
  "autoload": {
    "psr-4": {
      "CentreonOpenTickets\\": "src/CentreonOpenTickets",
      "Tests\\": "tests/php/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "../centreon"
    }
  ],
  "config": {
    "secure-http": false,
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "symfony/flex": false,
      "pestphp/pest-plugin": true,
      "symfony/runtime": true
    }
  },
  "scripts": {
    "require:check": "../tools/vendor/bin/composer-require-checker check --config-file=composer-require-checker.json composer.json",
    "phpcsfixer:legacy:src": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.src.php --verbose --dry-run --diff",
    "phpcsfixer:legacy:www": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.www.php --verbose --dry-run --diff",
    "phpcsfixer:legacy:src:fix": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.src.php --verbose --diff",
    "phpcsfixer:legacy:www:fix": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.www.php --verbose --diff",
    "phpstan:legacy:src": "../tools/vendor/bin/phpstan analyse -c phpstan.legacy.www.neon --memory-limit=1G",
    "phpstan:legacy:www": "../tools/vendor/bin/phpstan analyse -c phpstan.legacy.src.neon --memory-limit=1G",
    "php:check8.2": "../tools/vendor/bin/phpcs -p --standard=PHPCompatibility --extensions=php --runtime-set testVersion 8.2 . --ignore=*/vendor/*  --error-severity=1 --warning-severity=8",
    "rector:check": "../tools/vendor/bin/rector --dry-run --debug",
    "rector:fix": "../tools/vendor/bin/rector --debug",
    "test": "pest --do-not-cache-result",
    "test:ci": "@test --log-junit ./build/phpunit.xml --coverage-clover ./build/coverage.xml --no-interaction"
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "6.4.*"
    }
  }
}

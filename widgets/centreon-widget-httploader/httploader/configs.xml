<configs>
    <title>HTTP Loader</title>
    <author>Centreon</author>
    <email>contact@centreon.com</email>
    <website>http://www.centreon.com</website>
    <description>This widget displays the content of any URI in your custom view. Good idea to display some Intranet page, the Centreon official documentation or the weather forecast!</description>
    <version>21.10.0</version>
    <keywords>centreon, widget, url, http</keywords>
    <screenshot></screenshot>
    <thumbnail>./widgets/httploader/resources/centreon-logo.png</thumbnail>
    <url>./widgets/httploader/index.php</url>
    <autoRefresh>10</autoRefresh>
    <preferences>
        <preference label="Website" name="website" defaultValue="http://www.centreon.com" type="text"/>
        <preference label="Frame Height (pixels)" name="frameheight" defaultValue="900" type="text"/>
        <preference label="Refresh Interval (seconds)" name="refresh_interval" defaultValue="30" type="text" header="Misc"/>
    </preferences>
</configs>

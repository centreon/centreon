<configs>
    <title>NtopNG</title>
    <author>Centreon</author>
    <email>contact@centreon.com</email>
    <website>http://www.centreon.com</website>
    <description>This widget allows to request a NtopNG appliance through API</description>
    <version>22.04.0</version>
    <keywords>centreon, widget, network, ntopng</keywords>
    <screenshot></screenshot>
    <thumbnail>./widgets/ntopng-listing/resources/ntopng.png</thumbnail>
    <url>./widgets/ntopng-listing/index.php</url>
    <autoRefresh>60</autoRefresh>
    <preferences>
        <preference label="Login" name="login" defaultValue="" type="text" header="NtopNG Probe"/>
        <preference label="Password" name="password" defaultValue="" type="password"/>
        <preference label="Probe" name="address" defaultValue="" type="text"/>
        <preference label="Protocol" name="protocol" defaultValue="https" type="text"/>
        <preference label="Port" name="port" defaultValue="3000" type="text"/>
        <preference label="Interface" name="interface" defaultValue="0" type="text"/>
        <preference label="Mode" name="mode" defaultValue="top-n-local" type="list" header="View">
          <option value="top-n-local" label="Top N Local address"/>
          <option value="top-n-remote" label="Top N Remote address"/>
          <option value="top-n-flows" label="Top N Flows"/>
          <option value="top-n-application" label="Top N Applications"/>
        </preference>
        <preference label="Top" name="top" defaultValue="10" type="text"/>
        <preference label="IP Address" name="filter-address" defaultValue="" type="text" header="Filters (Top N Flows mode)"/>
        <preference label="Port" name="filter-port" defaultValue="" type="text"/>
        <preference label="Refresh Interval (seconds)" name="refresh_interval" defaultValue="60" type="text" header="Misc"/>
    </preferences>
</configs>

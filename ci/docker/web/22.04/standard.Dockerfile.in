FROM @BASE_IMAGE@
LABEL maintainer="Matthieu Kermagoret <mkermagoret@centreon.com>"
COPY web/22.04 /tmp/standard
RUN cp /tmp/standard/container.cnf /etc/my.cnf.d/ && \
    mkdir -p /usr/share/centreon/www/img/media/logos && \
    cp /tmp/standard/img/centreon.png /usr/share/centreon/www/img/media/logos/centreon.png && \
    chown -R apache.apache /usr/share/centreon/www/img/media && \
    chmod 0644 /etc/my.cnf.d/container.cnf && \
    chmod +x /tmp/standard/standard.sh && \
    /tmp/standard/standard.sh && \
    rm -rf /tmp/standard

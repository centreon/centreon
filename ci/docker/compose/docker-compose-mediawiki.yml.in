version: '2'
services:
  web:
    image: @WEB_IMAGE@
    ports:
    - "80"
    - "3306"
    links:
    - mediawiki
  mediawiki:
    image: registry.centreon.com/mon-mediawiki-22.10:latest
    ports:
    - "80"
  webdriver:
    image: registry.centreon.com/standalone-chrome:3.141.59-oxygen
    environment:
    - "SCREEN_WIDTH=1600"
    - "SCREEN_HEIGHT=2000"
    ports:
    - "4444"
    - "5900"
    volumes:
    - type: tmpfs
      target: /dev/shm
      tmpfs:
        size: 2000000000

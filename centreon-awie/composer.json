{
  "name": "centreon/centreon-awie",
  "version": "24.04",
  "type": "project",
  "license": "Apache-2.0",
  "require-dev": {
    "ext-json": "*",
    "behat/behat": "^3.10",
    "behat/mink-selenium2-driver": "^1.5",
    "centreon/centreon": "@dev",
    "centreon/centreon-test-lib": "24.04.x-dev",
    "friends-of-behat/mink": "^1.9",
    "friends-of-behat/mink-extension": "^2.5",
    "psr/container": "1.1.1",
    "squizlabs/php_codesniffer": "3.5.8"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../centreon"
    }
  ],
  "config": {
    "secure-http": false,
    "sort-packages": true,
    "platform": {
      "php": "8.1"
    },
    "allow-plugins": {
      "symfony/flex": false,
      "pestphp/pest-plugin": true
    },
    "preferred-install": {
      "*": "dist"
    }
  },
  "scripts": {
    "codestyle": "phpcs --extensions=php --standard=./ruleset.xml ./",
    "codestyle:ci": "@codestyle --report=checkstyle --report-file=./build/checkstyle.xml --no-cache"
  }
}

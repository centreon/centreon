{
  "name": "centreon/centreon-awie",
  "version": "25.07",
  "type": "project",
  "license": "Apache-2.0",
  "require": {
    "php": "8.2",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "behat/behat": "3.15.*",
    "behat/mink-selenium2-driver": "1.7.*",
    "centreon/centreon": "@dev",
    "centreon/centreon-test-lib": "dev-master",
    "dealerdirect/phpcodesniffer-composer-installer": "1.0.*",
    "friends-of-behat/mink": "1.11.*",
    "friends-of-behat/mink-extension": "2.7.*",
    "friendsofphp/php-cs-fixer": "3.64.*",
    "maglnet/composer-require-checker": "4.16.*",
    "phpcompatibility/php-compatibility": "9.3.*",
    "phpstan/phpstan": "1.12.*",
    "psr/container": "1.1.*",
    "rector/rector": "1.2.*",
    "squizlabs/php_codesniffer": "3.10.*"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../centreon"
    }
  ],
  "config": {
    "secure-http": false,
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "symfony/flex": false,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true,
      "symfony/runtime": true
    }
  },
  "scripts": {
    "phpcs": "php-cs-fixer fix --config=.php-cs-fixer.unstrict.php --verbose --dry-run --diff",
    "phpcs:exec": "php-cs-fixer fix --config=.php-cs-fixer.unstrict.php --verbose --diff",
    "phpcs:ci": "@phpcs",
    "phpstan": "phpstan analyse -c phpstan.neon --level=6 --memory-limit=512M --debug",
    "phpstan:ci": "@phpstan --no-progress",
    "php:check8.2": "phpcs -p --standard=PHPCompatibility --extensions=php --runtime-set testVersion 8.2 . --ignore=*/vendor/*  --error-severity=1 --warning-severity=8",
    "rector:check": "rector --dry-run --debug",
    "rector:exec": "rector --debug",
    "require:check": "composer-require-checker check --config-file=composer-require-checker.json composer.json"
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "6.4.*"
    }
  }
}

{
  "name": "centreon/centreon-awie",
  "version": "25.07",
  "type": "project",
  "license": "Apache-2.0",
  "require": {
    "php": "8.2",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "behat/behat": "3.15.*",
    "behat/mink-selenium2-driver": "1.7.*",
    "centreon/centreon": "@dev",
    "centreon/centreon-test-lib": "dev-master",
    "friends-of-behat/mink": "1.11.*",
    "friends-of-behat/mink-extension": "2.7.*",
    "psr/container": "1.1.*"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../centreon"
    }
  ],
  "config": {
    "secure-http": false,
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "symfony/flex": false,
      "symfony/runtime": true,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "require:check": "../tools/vendor/bin/composer-require-checker check --config-file=composer-require-checker.json composer.json",
    "cs:legacy:www": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.www.php --verbose --dry-run --diff",
    "cs:legacy:www:fix": "../tools/vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.legacy.www.php --verbose --diff",
    "stan:legacy:www": "../tools/vendor/bin/phpstan analyse -c phpstan.legacy.www.neon --memory-limit=512M",
    "rector": "../tools/vendor/bin/rector process --dry-run",
    "rector:fix": "../tools/vendor/bin/rector process",
    "cs": [
      "@cs:legacy:www"
    ],
    "cs:fix": [
      "@cs:legacy:www:fix"
    ],
    "stan": [
      "@stan:legacy:www"
    ],
    "ci": [
      "@cs",
      "@rector",
      "@stan"
    ]
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "6.4.*"
    }
  }
}

name: widget-engine-status

on:
  workflow_dispatch:
  pull_request:
    paths:
      - '.github/workflows/widget-engine-status.yml'
      - 'widgets/centreon-widget-engine-status/**'
  push:
    branches:
      - develop
    paths:
      - '.github/workflows/centreon-widget-engine-status.yml'
      - 'widgets/centreon-widget-engine-status/**'
    tags:
      - centreon-widget-engine-status-22.10.**

env:
  version: "22.10"
  module: "centreon-widget-engine-status"

jobs:
  package:
    uses: ./.github/workflows/widget-package.yml
    with:
      widget_name: engine-status
    secrets:
      nexus_username: ${{ secrets.NEXUS_RPMS_REPOSITORY_USERNAME }}
      nexus_password: ${{ secrets.NEXUS_RPMS_REPOSITORY_PASSWORD }}

  deilvery:
    needs: [package]
    uses: ./.github/workflows/widget-package.yml
    with:
      widget_name: engine-status
    secrets:
      nexus_username: ${{ secrets.NEXUS_RPMS_REPOSITORY_USERNAME }}
      nexus_password: ${{ secrets.NEXUS_RPMS_REPOSITORY_PASSWORD }}
